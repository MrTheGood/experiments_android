<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="experimentViewModel"
            type="eu.insertcode.experiments.viewmodel.ExperimentViewModel"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:onClick="@{experimentViewModel.onClickedItem}"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/main_experiment_indicator"
            srcRes="@{experimentViewModel.experimentIcon}"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:contentDescription="@string/main_desc_experimentIndicator"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_touch_app"
            />

        <TextView
            android:id="@+id/main_experiment_title"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="@{experimentViewModel.experimentTitle}"
            tools:text="@tools:sample/lorem"
            />

    </LinearLayout>
</layout>